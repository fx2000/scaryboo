<h1>Welcome to Scary Boo Inc</h1>
<h2>Event Registration Form</h2>
<form action="/users/register" method="POST" id="register">
  <input type="text" name="name" placeholder="Enter your name">
  <input type="email" name="email" placeholder="Enter your email">
  <input type="number" name="mobile" placeholder="Enter your phone number">
  <button type="submit" form="register" value="Register">Register</button>
</form>

<p>{{errorName}}</p>
<p>{{errorEmail}}</p>
<p>{{errorMobile}}</p>
